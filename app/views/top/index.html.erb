<div id="whole_page">
    <div id="logo">
        <%= link_to top_index_path do %>
            <%= image_tag 'logo2.png' %>
        <% end %>
    </div>
    
    <div id="title1">
        <p>プレイリスト</p>
    </div>
    
    <div id="playlists">
        <% @playlists.each do |playlist| %>
            <div class="playlist" data-id="<%= playlist.id %>">
                <div class="select-playlist-wrapper">
                    <%= button_to "", playlists_index_path(id: playlist.id), method: 'post', class: "select-playlist" %>
                </div>
                <div id="playlist_thumbnail">
                    <% if playlist.image.attached? %>
                      <%= image_tag playlist.image %>
                    <% end %>
                </div>
                <div id="playlist_name_area">
                    <div id="playlist_name">
                        <%= playlist.playlistname %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    
    <div id="create_playlist_button">
        <%= button_to "新しくプレイリストを作成", playlists_new_path, class: "create-new-playlist" %>
    </div>

    <div id="all_songs">
        <div id="title1">
            <p>全ての曲</p>
        </div>
        <div id="upload_button">
            <%= link_to playlists_new_path do %>
                <%= image_tag 'upload.svg' %>
            <% end %>
        </div>
    </div>
    
    <div id="songs">
        <% @songs.each do |song| %>
            <div class="song" data-id="<%= song.id %>">
                <div class="select-song-wrapper">
                    <%= button_to "", songs_index_path(id: song.id), method: 'post', class: "select-song" %>
                </div>
                <div id="song_name_area">
                    <div id="song_name">
                        <%= song.songname %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>